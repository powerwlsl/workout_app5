<div class="jumbotron">
<h1>Workout Lounge!</h1>

<p>Show off your workout to your friends and family</p>
</div>

<div class="row">
	<div class="col-md-10">
		<h2>List of Members</h2>
		<%= will_paginate @athletes, renderer: BootstrapPagination::Rails, class: "pull-left paginate" %>
	</div>
</div>


<div class="row">
	<% @athletes.each do |athlete| %>
		<div class="col-md-10 well member">
			<%= athlete.full_name %>

			<% if current_user && !(current_user.same?(athlete)) %>
				<% if current_user.follows?(athlete) %>
					<%= link_to "Unfollow", following_path(athlete), method: :delete, class: "btn btn-danger pull-right" %>
				<% else %>
					<%= link_to "Follow", followings_path(friend_id: athlete.id),method: :post, class: "btn btn-success pull-right" %>
				<% end %>
			<% end %>
		</div>
	<% end %>
</div>