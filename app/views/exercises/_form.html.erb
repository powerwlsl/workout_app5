
<div class="row">
	<div class="col-md-12">
		<%= form_for([current_user,@exercise], :html => {class: "form-horizontal", role: "form"}) do |f| %>
				<% if @exercise.errors.any? %>
					<div class="panel panel-danger col-mid-offset-1">
						<div class="panel-heading">
							<h2 class="panel-title">
								<%= pluralize(@exercise.errors.count,"errors")%>
								prohibited thi sexercise from being saved:
							</h2>
							<div class="panel-body">
								<ul>
									<% @exercise.errors.full_messages.each do |error| %>
										<li><%= error %></li>
									<% end %>
								</ul>
							</div>
						</div>
					</div>
				<% end %>

			<div class="form-group">
				<div class="control-label col-md-1 pull-left">
					<%= f.label :duration %>
				</div>
				<div class="col-md-8">
					<%= f.text_field :duration,class: 'form-control',placeholder: "Duration of exercise", autofocus: true %>
				</div>
			</div>

			<div class="form-group">
				<div class="control-label col-md-1 pull-left">
					<%= f.label :detail %>
				</div>
				<div class="col-md-8">
					<%= f.text_area :detail, rows: 10, class: 'form-control',placeholder: "Detail of exercise", autofocus: true %>
				</div>
			</div>

			<div class="form-group">
				<div class="control-label col-md-1 pull-left">
					<%= f.label :date %>
				</div>
				<div class="col-md-8">
					<%= f.text_field :date, class: 'form-control',placeholder: "Date of exercise", autofocus: true %>
				</div>
			</div>

			<div class="form-group">
				<div class="col-md-offset-1 col-md-11">
					<%= f.submit  class: "btn btn-primary btn-large pull-right" %>
					<%= link_to 'Back', user_exercises_path(current_user), class: 'btn btn-default link', id: 'new-exer-btn' %>
					
				</div>
			</div>



		<% end %>
	</div>
</div>